<%- include("../partials/header"); -%>
<section class="pd-5">
    <div class="wrapper">
        <div class="middle">
            <div id="overlay">
                <div class="container">
                    <div class="row">
                        <div class="signup">Sign Up</div>
                        <div class="login">Log In</div>
                    </div>

                    <form action="/signup" method="POST" class="signup-form">
                        <input type="text" placeholder="Your Full Name" name="username" class="input"><br>
                        <input type="email" placeholder="Your Email Address" name="email" class="input"><br>
                        <input type="password" placeholder="Choose a Password" name="password" class="input"><br>
                        <button type="submit" class="btn button">Create account</button>
                        <!-- Where error messages are displayed hidden otherwise -->
                        <span id="smessage" style="<%= textcolor %>"> <%= message %> </span>
                    </form>

                    <form action="/login" method="POST" class="login-form">
                        <input type="text" placeholder="Email or Username" name="username" class="input"><br />
                        <input type="password" placeholder="Password" name="password" class="input"><br />
                        <button type="submit" class="btn button">log in</button>
                        <!-- <span><a href="#">Forgot my username or password?</a></span> -->
                        <!-- Where error messages are displayed hidden otherwise -->
                        <span id="lmessage" style="<%= textcolor %>"> <%= message %> </span>
                        <br>
                        <a href="/auth/google" role="button"><img class="google" src="/assets/btn_google_signin_dark_pressed_web@2x.png" alt="SIGN IN WITH GOOGLE"></a>
                    </form>
            </div>
        </div>
    </div>
</section>
<%- include("../partials/footer"); -%>